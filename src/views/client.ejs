<%- include('header.ejs') %>
        <div class="container h-100">

            <h1 class="title-home mt-5">Cliente</h1>

            <div class="center">
                <div class="big-card">
                    <div class="center">
                        <img src="https://d1csarkz8obe9u.cloudfront.net/posterpreviews/yellow-business-leadership-book-cover-design-template-dce2f5568638ad4643ccb9e725e5d6ff_screen.jpg?ts=1637017516"
                            width="250rem" class="icon-person">
                        <div class="d-flex align-items-center mt-1">
                            <div class="bold"><%= cliente[0].name %></div>
                            <div class="badge ml-1"><%= cliente[0].ranking %></div>
                        </div>
                    </div>
                    <div class="info-client ml-7">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex">
                                <img src="https://www.svgrepo.com/show/532167/document-layout-right.svg" class="icon op-75">
                                <div class="ml-1">
                                    <div class="bold">CPF</div>
                                    <%= cliente[0].cpf %>
                                </div>
                            </div>
                            <div class="d-flex">
                                <img src="https://www.svgrepo.com/show/502648/email.svg" class="icon op-75">
                                <div class="ml-1">
                                    <div class="bold">E-mail</div>
                                    <%= cliente[0].email %>
                                </div>
                            </div>
                            <div class="d-flex">
                                <img src="https://www.svgrepo.com/show/502605/date-range.svg" class="icon op-75">
                                <div class="ml-1">
                                    <div class="bold">Data de Nascimento</div>
                                    <%= cliente[0].birthDate %>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex mt-2">
                            <div class="w-49">
                                <div class="d-flex">
                                    <img src="https://www.svgrepo.com/show/533285/phone.svg" class="icon op-75">
                                    <div class="ml-1">
                                        <div class="bold">Telefones</div>
                                        (<%= cliente[0].ddd %>) <%= cliente[0].phoneNumber %>
                                    </div>
                                </div>
                                <div class="d-flex mt-2">
                                    <img src="https://www.svgrepo.com/show/532540/location-pin-alt-1.svg" class="icon op-75">
                                    <div class="ml-1">
                                        <div class="bold">Endereços</div>
                                        <%= cliente[0].street %>, <%= cliente[0].addressNumber %>, <%= cliente[0].neighborhood %> - <%= cliente[0].city %>, <%= cliente[0].state %>
                                    </div>
                                </div>
                            </div>
                            <div class="w-49">
                                <!-- cards -->
                                <div class="d-flex">
                                    <img src="https://www.svgrepo.com/show/532425/credit-card-alt-1.svg" class="icon op-75">
                                    <div class="ml-1">
                                        <div class="bold">Cartões</div>
                                        <div class="d-flex align-items-center">
                                            <img src="<%= cliente[0].cardFlag %>" class="card-flag">                                    
                                            <div class="ml-1"><%= cliente[0].cardNumber %> - <%= cliente[0].cardName %></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-2">
                            <a href="/clients/edit/<%= cliente[0].id %>" class="btn btn-primary">Editar</a>
                            <a href="/clients/delete/<%= cliente[0].id %>" class="btn btn-danger">Deletar</a>
                        </div>
                    </div>
                </div>

                <div id="edit" class="">

                    <!-- FORM FOR CLIENT EDIT -->
                    <!-- get id from client -->
                    <input type="text" id="id" value="<%= cliente[0].id %>" hidden>
                    

                </div>

                <a href="/clients" class="mt-5 btn btn-primary">Voltar</a>
            </div>
        </div>


        </div>

        <%- include('footer.ejs') %>

<script>
    
    // when the page is loaded, hide the edit form
    $(document).ready(function() {
        $("#edit").hide();
    });

    // when the edit button is clicked, show the edit form
    $("#edit-btn").click(function() {
        $("#edit").show();
    });

</script>