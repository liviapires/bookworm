<%- include('header.ejs') %>

    <div id="body" class="body">
        <div class="cart">
            <div class="left">
                <div class="bg-gray">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="page-title">Informações de Contato</div>
                    </div>
                    <!-- display info -->
                    <input class="w-100 mt-5 form-control" value="<%= clientInfo[0].email %>" disabled>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" value="<%= clientInfo[0].name %>" disabled>
                        <input class="w-49 form-control" value="<%= clientInfo[0].cpf %>" disabled>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" value="<%= clientInfo[0].genre %>" disabled>
                        <input class="w-49 form-control" value="<%= clientInfo[0].birthDate %>" disabled>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-20 form-control" value="<%= clientInfo[0].ddd %>" disabled>
                        <input class="w-59 form-control" value="<%= clientInfo[0].phone %>" disabled>
                        <input class="w-20 form-control" value="<%= clientInfo[0].phoneType %>" disabled>
                    </div>
                    
                    <hr class="mt-5">
                    <div class="page-title mt-5">Endereço</div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-79 form-control" value="<%= endereco[0].street %>" disabled>
                        <input class="w-20 form-control" value="<%= endereco[0].number %>" disabled>
                    </div>
                    <input class="w-100 mt-1 form-control" value="<%= endereco[0].complement %>" disabled>
                    <input class="w-100 mt-1 form-control" value="<%= endereco[0].city %>" disabled>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" value="<%= endereco[0].state %>" disabled>
                        <input class="w-49 form-control" value="<%= endereco[0].cep %>" disabled>
                    </div>
                    
                    <hr class="mt-5">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="page-title">Pagamento</div>
                        <a href="#" data-toggle="tooltip" data-placement="left" title="O valor pago em cada cartão não pode ser menor que R$ 10,00. (Se o valor final da sua compra for menor que R$ 20,00, o uso de mais de um cartão será barrado.)">Usar mais de um cartão</a>
                    </div>
                    <div class="mt-1"></div>
                    <div class="cards">
                        <% cartoes.forEach((cartao) => { %>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <img src="<%= cartao.image %>" alt="cartão 1" width="100">
                                    <div class="ml-1">
                                        <div><%= cartao.cardNumber %></div>
                                        <div><%= cartao.cardName %></div>
                                        <div>Vence em: <%= cartao.cardExpiration %></div>
                                    </div>
                                </div>
                                <div class="al-t-r">
                                    <div class="slight-bold">Valor</div>
                                    <input class="form-control" placeholder="R$ 10,00">
                                </div>
                            </div>
                            <hr>
                        <% }); %>
                    </div>
                </div>
            </div>
            <div class="d-block right">
                <% livros.forEach((liv) => { %>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex ">
                            <img src="<%= liv.image %>" width="50rem">
                            <div class="ml-1 t-left">
                                <div class="slight-bold"><%= liv.title %></div>
                                <div><%= liv.author %></div>
                                <div><%= liv.publisher %></div>
                            </div>
                        </div>
                        <div class="d-block justify-content-right">
                            <div>Quantidade: <%= liv.quantity %> </div>
                            <div>R$ <%= liv.price %></div>
                        </div>
                    </div>
                    <hr>
                <% }); %>
                <div class="bg-gray mt-4">
                    <div class="slight-bold">Cupom</div>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisar..." aria-label="Pesquisar..."
                            aria-describedby="basic-addon1">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button">
                                <img src="https://www.svgrepo.com/show/532555/search.svg" alt="Pesquisar"
                                    class="search-icon">
                            </button>
                        </div>
                    </div>
                </div>
                <div class="mt-3 slight-bold">Total Carrinho</div>
                <div class="bg-gray mt-3">
                    <div class="d-flex">
                        <div class="slight-bold">Subtotal</div>
                        <div class="ml-auto">R$ <%= total %></div>
                    </div>
                    <hr>
                    <div class="d-flex">
                        <div class="slight-bold">Frete</div>
                        <div class="ml-auto">R$ <%= frete %></div>
                    </div>
                    <hr>
                    <div class="d-flex">
                        <div class="slight-bold">Total</div>
                        <div class="ml-auto">R$ <%= precoFinalComFrete %></div>
                    </div>
                    <hr>
                    <a href="/finishPurchase" class="btn btn-primary w-100 mt-1">Finalizar Compra</a>
                </div>
            </div>
        </div>
    </div>

<%- include('footer.ejs') %>

<script>
    $(function () {
        // show the tooltip when hovering over the element imeadiately

        $('[data-toggle="tooltip"]').tooltip()    
    })
</script>