<%- include('header.ejs') %>
<div class="main-center container">

    <h1 class="title center mt-5">Clientes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th class="veronica">Nome</th>
                <th class="veronica">CPF</th>
                <th class="veronica">Telefone</th>
                <th class="veronica">Endere√ßo</th>
                <th class="veronica">Bairro</th>
                <th class="veronica">CEP</th>
                <th class="veronica">Estado</th>
                <th class="veronica">Mais</th>
            </tr>
        </thead>
        <tbody>

            <% if (clients.length==0) { %>
                <tr>
                    <td colspan="8" class="text-center">Nenhum cliente cadastrado</td>
                </tr>
            <% } %>

            <% clients.forEach(function(client) { %>
                <tr>
                    <td class="bold">
                        <%= client.name %>
                    </td>
                    <td>
                        <%= client.cpf %>
                    </td>
                    <!-- if there is no number, show empty -->
                    <td>
                        <% if (client.phoneNumber) { %>
                            (<%= client.ddd %>) <%= client.phoneNumber %>
                        <% } %>
                    </td>
                    <!-- if there is no address, show empty -->
                    <td>
                        <% if (client.street) { %>
                            <%= client.street %>, <%= client.number %>
                        <% } %>
                    </td>
                    <td>
                        <% if (client.neighborhood) { %>
                            <%= client.neighborhood %>
                        <% } %>
                    </td>
                    <td>
                        <%= client.zipCode %>
                    </td>
                    <td>
                        <% if (client.state) { %>
                            <%= client.state %>
                        <% } %>
                    </td>
                    <td>
                        <a href="/client/<%= client.userId %>">
                            <img src="https://www.svgrepo.com/show/522719/zoom-plus.svg" alt="Ver mais" class="icon">
                        </a>
                    </td>
                </tr>
            <% }); %>

        </tbody>
    </table>
    
    <a href="/signin" class="btn btn-primary">Novo Cliente</a>

</div>

<%- include('footer.ejs') %>