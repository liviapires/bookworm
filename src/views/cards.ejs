<%- include('header.ejs') %>

<div id="body" class="body">
    <div class="bottom ml-10">
        <div class="filters">
            <div>
                <img src="https://www.svgrepo.com/show/532571/image-circle.svg" alt="imagem de perfil"
                    class="br-100" width="150">
                <div class="mt-5">
                    Dados Pessoais
                </div>
                <div class="mt-5">
                    Endereços
                </div>
                <div class="mt-5">
                    Pedidos
                </div>
                <div class="filter-title mt-5">
                    Cartões
                </div>
                <div class="mt-5">
                    Favoritos
                </div>
                <div class="mt-5">
                    Sair
                </div>
            </div>
        </div>
        <div class="data">
            <div class="title">Cartões</div>
            <div class="card-big">
                <div class="page-title">Já cadastrados</div>
                <div class="d-block justify-content-between align-items-center mt-1">
                        <% cartoes.forEach((cartao) => {%>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <img src="<%= cartao.imagem %>" alt="cartão 1" width="100">
                                    <div class="ml-1">
                                        <div><%= cartao.numero %></div>
                                        <div><%= cartao.nome %></div>
                                        <div>Vence em: <%= cartao.validade %></div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        <% }); %>
                    </div>
                <div class="page-title">Cadastrar Novo</div>
                <div class="d-flex justify-content-between align-items-center mt-1">
                    <input class="w-49 form-control" placeholder="Número do Cartão">
                    <input class="w-49 form-control" placeholder="Validade">
                </div>
                <input class="w-100 mt-1 form-control" placeholder="Nome Impresso no Cartão">
                <div class="d-flex justify-content-between align-items-center mt-1">
                    <input class="w-49 form-control" placeholder="Bandeira">
                    <input class="w-49 form-control" placeholder="CVV">
                </div>
                <button type="button" class="btn btn-secondary mt-1 w-100">Adicionar Cartão</button>
            </div>
        </div>
    </div>
</div>

<%- include('footer.ejs') %>