<%- include('header.ejs') %>

<div id="body" class="body">
    <div class="center">
        <div class="card-big mt-1">
            <div class="title center mt-1">Editar Telefone</div>
            <form action="" method="POST">
                <div class="forms">
                    <input class="w-100 form-control" placeholder="ID" type="text" name="id" id="id" value="<%= phone[0].phoneId %>" hidden>

                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-50 form-control" placeholder="DDD" type="text" name="ddd" id="ddd" value="<%= phone[0].ddd %>">
                        <input class="w-49 form-control" placeholder="Telefone" type="text" name="phone" id="phone" value="<%= phone[0].phoneNumber %>">
                    </div>
                    <input class="w-100 mt-05 form-control" placeholder="Tipo" type="text" name="type" id="type" value="<%= phone[0].type %>">
                </div>
                <a href="/myAccount" class="btn btn-outline-secondary w-49 mt-2">Voltar</a>
                <button type="submit" class="btn btn-primary w-49 mt-2">Salvar</button>
            </form>
        </div>
    </div>
</div>

<%- include('footer.ejs') %>