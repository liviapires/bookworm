<%- include('header.ejs') %>
<div class="center container">

    <h1 class="title center mt-5">Clientes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th class="veronica">Código</th>
                <th class="veronica">Situação</th>
                <th class="veronica">Valor</th>
                <th class="veronica">Ver mais</th>
            </tr>
        </thead>
        <tbody>

            <% if (exchanges.length==0) { %>
                <tr>
                    <td colspan="8" class="text-center">Solicitações de troca aparecerão aqui.</td>
                </tr>
            <% } %>

            <% exchanges.forEach(function(exchange) { %>
                
                <tr>
                    <td class="bold">
                        <%= exchange.transactionCode %>
                    </td>
                    <td>
                        <%= exchange.status %>
                    </td>
                    <td>
                        R$ <%= exchange.transactionValue %>
                    </td>
                    <td>
                        <a href="/exchange/<%= exchange.userId %>">
                            <img src="https://www.svgrepo.com/show/522719/zoom-plus.svg" alt="Ver mais" class="icon">
                        </a>
                    </td>
                </tr>
            <% }); %>

        </tbody>
    </table>
    
    <a href="/signin" class="btn btn-primary">Novo Cliente</a>

</div>

<%- include('footer.ejs') %>