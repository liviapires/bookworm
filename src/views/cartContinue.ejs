<%- include('header.ejs') %>
    <div id="body" class="body">
        <div class="cart">
            <div class="bg-gray w-63">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="page-title">Continuar Compra</div>
                </div>
                <div id="clientInfo">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="page-title mt-5">Informações de Contato</div>
                    </div>
                    <div class="mt-05">
                        <% console.log("Cliente: ", cliente); %>
                        <% console.log("Endereços: ", enderecos); %>
                        <% console.log("Telefones: ", telefones); %>
                        <% console.log("Cartoes: ", cartoes); %>
                        <div class="d-flex">
                            <div class="slight-bold">
                                <%= cliente[0].name  %> | <%= cliente[0].cpf %>
                            </div>
                            <div class="ml-05">
                                (<%= cliente[0].email %>)
                            </div>
                        </div>
                        Telefones:
                        <% telefones.forEach((tel) => { %>
                            <%= tel.ddd %> <%= tel.phoneNumber %>
                            <% if (telefones.length > 1) { %>
                                <div class="ml-05 mr-05">|</div>
                            <% } %>
                        <% }); %>
                    </div>
                    
                    <hr class="mt-5">

                    <div class="page-title mt-5">Endereço</div>
                    <div class="mt-05">
                        <% enderecos.forEach((end) => { %>
                            <%= end.street %>, <%= end.number %> 
                            <%= end.city %>, <%= end.state %> - <%= end.zipCode %>, <%= end.complement %> 
                        <% }); %>
                    </div>

                    <hr class="mt-5">

                    <div class="d-flex align-items-center justify-content-between mt-5">
                        <div class="page-title">Pagamento</div>
                        <a href="#" data-toggle="tooltip" data-placement="left" title="O valor pago em cada cartão não pode ser menor que R$ 10,00. (Se o valor final da sua compra for menor que R$ 20,00, o uso de mais de um cartão será barrado.)">Usar mais de um cartão</a>
                    </div>
                    <div class="cards" id="card">
                        <% cartoes.forEach((cartao) => { 
                        if (cartao.preferred == 1) {%>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <input type="radio" value="<%= cartao.cardId %>" checked>
                                    <div class="ml-1">
                                        <div><%= cartao.cardNumber %></div>
                                        <div><%= cartao.cardName %></div>
                                        <div>Vence em: <%= cartao.expirationDate %></div>
                                    </div>
                                </div>
                            </div>
                        <%}}); %>
                    </div>
                </div>
            </div>
            <!-- RIGHT PART -->
            <div class="d-block right">
                <% livros.forEach((liv) => { %>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex ">
                            <div class="ml-1 t-left">
                                <div class="slight-bold"><%= liv.title %></div>
                                <div><%= liv.author %></div>
                                <div><%= liv.publisher %></div>
                            </div>
                        </div>
                        <div class="d-block justify-content-right">
                            <div>Quantidade: <%= liv.quantity %> </div>
                            <div>R$ <%= liv.price %></div>
                        </div>
                    </div>
                    <hr>
                <% }); %>
                <div class="bg-gray mt-4">
                    <div class="slight-bold">Cupom</div>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisar..." aria-label="Pesquisar..."
                            aria-describedby="basic-addon1">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button">
                                <img src="https://www.svgrepo.com/show/532555/search.svg" alt="Pesquisar"
                                    class="search-icon">
                            </button>
                        </div>
                    </div>
                </div>
                <div class="mt-3 slight-bold">Total Carrinho</div>
                <div class="bg-gray mt-3">
                    <div class="d-flex">
                        <div class="slight-bold">Subtotal</div>
                        <div class="ml-auto">R$ <%= total %></div>
                    </div>
                    <hr>
                    <div class="d-flex">
                        <div class="slight-bold">Frete</div>
                        <div class="ml-auto">R$ <%= frete %></div>
                    </div>
                    <hr>
                    <div class="d-flex">
                        <div class="slight-bold">Total</div>
                        <div class="ml-auto">R$ <%= precoFinalComFrete %></div>
                    </div>
                    <hr>
                    <a href="/cartCheckout" class="btn btn-primary w-100 mt-1">Verificar Compra</a>
                </div>
            </div>
        </div>
    </div>

<%- include('footer.ejs') %>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>