<%- include('header.ejs') %>

    <div id="body" class="body">
        <div class="cart">
            <div class="bg-gray">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="page-title">Continuar Compra</div>
                    <div class="d-flex">
                        <div>
                            Já possui uma conta?
                        </div>
                        <a href="#" class="ml-1">
                            Log in
                        </a>
                    </div>
                </div>
                <div id="clientInfo">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="page-title mt-5">Informações</div>
                    </div>
                </div>
                <div id="newClientInfo">
                    <input class="w-100 mt-05 form-control" placeholder="Email">
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Nome">
                        <input class="w-49 form-control" placeholder="CPF">
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Gênero">
                        <input class="w-49 form-control" placeholder="Data de Nascimento">
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-20 form-control" placeholder="DDD">
                        <input class="w-59 form-control" placeholder="Telefone">
                        <input class="w-20 form-control" placeholder="Tipo">
                    </div>
                    <input class="w-100 form-control mt-1" type="password" placeholder="Senha">
                    
                    <hr class="mt-5">
                    <div class="page-title mt-5">Endereço</div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-79 form-control" placeholder="Endereço">
                        <input class="w-20 form-control" placeholder="Número">
                    </div>
                    <input class="w-100 mt-1 form-control" placeholder="Complemento">
                    <input class="w-100 mt-1 form-control" placeholder="Cidade">
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Estado">
                        <input class="w-49 form-control" placeholder="CEP">
                    </div>
                    <hr class="mt-5">
                    <div class="d-flex align-items-center justify-content-beween mt-5">
                        <div class="page-title">Pagamento</div>
                        <div>
                            <a href="#" class="ml-05">Usar mais de um cartão</a>
                        </div>
                    </div>
                    <div class="slight-bold mt-3">Adicionar Cartão</div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Número do Cartão">
                        <input class="w-49 form-control" placeholder="Validade">
                    </div>
                    <input class="w-100 mt-1 form-control" placeholder="Nome Impresso no Cartão">
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Bandeira">
                        <input class="w-49 form-control" placeholder="CVV">
                    </div>
                    <button type="button" class="btn btn-secondary mt-1">Adicionar Cartão</button>
                </div>
            </div>
            <!-- RIGHT PART -->
            <div class="d-block right">
                <% livros.forEach((liv) => { %>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex ">
                            <div class="ml-1 t-left">
                                <div class="slight-bold"><%= liv.title %></div>
                                <div><%= liv.author %></div>
                                <div><%= liv.publisher %></div>
                            </div>
                        </div>
                        <div class="d-block justify-content-right">
                            <div>Quantidade: <%= liv.quantity %> </div>
                            <div>R$ <%= liv.price %></div>
                        </div>
                    </div>
                    <hr>
                <% }); %>
                <div class="bg-gray mt-4">
                    <div class="slight-bold">Cupom</div>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisar..." aria-label="Pesquisar..."
                            aria-describedby="basic-addon1">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button">
                                <img src="https://www.svgrepo.com/show/532555/search.svg" alt="Pesquisar"
                                    class="search-icon">
                            </button>
                        </div>
                    </div>
                </div>
                <div class="mt-3 slight-bold">Total Carrinho</div>
                <div class="bg-gray mt-3">
                    <div class="d-flex">
                        <div class="slight-bold">Subtotal</div>
                        <div class="ml-auto">R$ <%= precoFinal %></div>
                    </div>
                    <hr>
                    <div class="d-flex">
                        <div class="slight-bold">Frete</div>
                        <div class="ml-auto">R$ <%= frete %></div>
                    </div>
                    <hr>
                    <div class="d-flex">
                        <div class="slight-bold">Total</div>
                        <div class="ml-auto">R$ <%= precoFinalComFrete %></div>
                    </div>
                    <hr>
                    <a href="/cartCheckout" class="btn btn-primary w-100 mt-1">Verificar Compra</a>
                </div>
            </div>
        </div>
    </div>

<%- include('footer.ejs') %>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>