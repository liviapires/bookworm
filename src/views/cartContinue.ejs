<%- include('header.ejs') %>

    <div id="body" class="body">
        <div class="cart">
            <div class="left">
                <div class="bg-gray">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="page-title">Informações de Contato</div>
                        <div class="d-flex">
                            <div>
                                Já possui uma conta?
                            </div>
                            <a class="ml-1">
                                Log in
                            </a>
                        </div>
                    </div>
                    <input class="w-100 mt-5 form-control" placeholder="Email">
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Nome">
                        <input class="w-49 form-control" placeholder="CPF">
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Gênero">
                        <input class="w-49 form-control" placeholder="Data de Nascimento">
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-20 form-control" placeholder="DDD">
                        <input class="w-59 form-control" placeholder="Endereço">
                        <input class="w-20 form-control" placeholder="Tipo">
                    </div>
                    <input class="w-100 form-control mt-1" placeholder="Senha">
                    
                    <hr class="mt-5">
                    <div class="page-title mt-5">Endereço</div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-79 form-control" placeholder="Endereço">
                        <input class="w-20 form-control" placeholder="Número">
                    </div>
                    <input class="w-100 mt-1 form-control" placeholder="Complemento">
                    <input class="w-100 mt-1 form-control" placeholder="Cidade">
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Estado">
                        <input class="w-49 form-control" placeholder="CEP">
                    </div>
                    <hr class="mt-5">
                    <div class="page-title mt-5">Pagamento</div>
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center mt-1">
                            <div class="slight-bold">Seus Cartões</div>
                            <button type="button" class="btn" data-toggle="tooltip" data-placement="left" title="O valor pago em cada cartão não pode ser menor que R$ 10,00. (Se o valor final da sua compra for menor que R$ 20,00, o uso de mais de um cartão será barrado.)">
                                <img src="https://www.svgrepo.com/show/511031/info.svg" alt="info" class="icon-min">
                            </button>
                        </div>
                        <a href="#">Usar mais de um cartão</a>
                    </div>
                    <div class="mt-1"></div>
                    <div class="cards">
                        <% cartoes.forEach((cartao) => { %>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <img src="<%= cartao.imagem %>" alt="cartão 1" width="100">
                                    <div class="ml-1">
                                        <div><%= cartao.numero %></div>
                                        <div><%= cartao.nome %></div>
                                        <div>Vence em: <%= cartao.validade %></div>
                                    </div>
                                </div>
                                <div class="al-t-r">
                                    <div class="slight-bold">Valor</div>
                                    <input class="form-control" placeholder="R$ 10,00">
                                </div>
                            </div>
                            <hr>
                            <% }); %>
                    </div>
                    <div class="slight-bold mt-3">Adicionar Cartão</div>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Número do Cartão">
                        <input class="w-49 form-control" placeholder="Validade">
                    </div>
                    <input class="w-100 mt-1 form-control" placeholder="Nome Impresso no Cartão">
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <input class="w-49 form-control" placeholder="Bandeira">
                        <input class="w-49 form-control" placeholder="CVV">
                    </div>
                    <button type="button" class="btn btn-secondary mt-1">Adicionar Cartão</button>
                </div>
            </div>
            <div class="d-block right">
                <% livros.forEach((livro) => { %>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex ">
                            <img src="<%= livro.imagem %>" width="50rem">
                            <div class="ml-1 t-left">
                                <div class="slight-bold"><%= livro.titulo %></div>
                                <div><%= livro.autor %></div>
                                <div><%= livro.editora %></div>
                            </div>
                        </div>
                        <div>R$ <%= livro.preco %></div>
                    </div>
                    <hr>
                <% }); %>
                <div class="bg-gray mt-4">
                    <div class="slight-bold">Cupom</div>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisar..." aria-label="Pesquisar..."
                            aria-describedby="basic-addon1">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button">
                                <img src="https://www.svgrepo.com/show/532555/search.svg" alt="Pesquisar"
                                    class="search-icon">
                            </button>
                        </div>
                    </div>
                </div>
                <div class="mt-3 slight-bold">Total Carrinho</div>
                <div class="bg-gray mt-3">
                    <div class="d-flex">
                        <div class="slight-bold">Subtotal</div>
                        <div class="ml-auto">R$ <%= precoFinal %></div>
                    </div>
                    <hr>
                    <div class="d-flex">
                        <div class="slight-bold">Frete</div>
                        <div class="ml-auto">R$ <%= frete %></div>
                    </div>
                    <hr>
                    <div class="d-flex">
                        <div class="slight-bold">Total</div>
                        <div class="ml-auto">R$ <%= precoFinalComFrete %></div>
                    </div>
                    <hr>
                    <button type="button" class="btn btn-primary w-100 mt-1">Finalizar Compra</button>
                </div>
            </div>
        </div>
    </div>

<%- include('footer.ejs') %>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>