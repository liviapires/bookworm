                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button">
                                <img src="https://www.svgrepo.com/show/532555/search.svg" alt="Pesquisar" class="search-icon">
                            </button>
                        </div>
                    </div>
                    <a class="navbar-brand ml-1" href="/cart">
                        <img src="https://www.svgrepo.com/show/533043/cart-shopping.svg" alt="Carrinho" class="icon">
                    </a>
                    <a class="navbar-brand" href="/clients">
                        <img src="https://www.svgrepo.com/show/440009/person-circle.svg" alt="Minha Conta" class="icon">
                    </a>
                </div>
