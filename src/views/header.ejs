<body>
    <!-- HEADER -->
    <div id="header">
        <nav class="navbar bg-body-tertiary bg-yellow-green">
            <div class="container-fluid">
                <div class="d-flex">
                    <a class="navbar-brand" href="/allBooks">
                        <img src="https://www.svgrepo.com/show/509382/menu.svg" alt="Menu" class="icon">
                    </a>
                    <h6 class="veronica mt-075">Categorias</h6>
                </div>
                <a id="logo" class="white logo" href="/home">Bookworm</a>
                <div class="d-flex">
                    <div class="input-group">
                        <input type="search" class="form-control" placeholder="Pesquisar..." aria-label="Pesquisar..."
